[Unit]
Description=Mapit Server

[Service]
ExecStart=/usr/bin/docker pull nordgedanken/mapit-germany-docker
ExecStart=/usr/bin/docker run -p 8020:80 nordgedanken/mapit-germany-docker --name "mapit"
ExecStop=/usr/bin/docker stop -t 2 mapit
User=daemon
Group=docker

[Install]
WantedBy=multi-user.target
